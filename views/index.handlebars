<h2>Eat-Da-Burger</h2>

<ul>
    {{#each burger}}
        {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
        {{/unless}}
    {{/each}}

    <button class="devour" data-id="{{this.id}}">Devour The Burger!</button>
</ul>

<ul>
    {{#each burger}}
        {{#if devoured}}
            {{> burger/burger-block devour=false}}
        {{/if}}
    {{/each}}
</ul>


{{!-- Create a new burger --}}

<form class="create-form">

    <div class="form-group">
        <label for="burger">Type of Burger</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add A Burger!</button>
    <h6>Enter a burger you want to eat, and then click the "Submit" button.</h6>

</form>