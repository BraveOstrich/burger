<h1 class="eat-da">Eat-Da-Burger</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    <div class="burger">
                        <form class="burger-style" action="/api/burgers/{{this.id}}" method="POST">
                            {{this.name }}

                            <button class="clicker" type="submit">Devour the Burger!</button>
                            {{!-- <h6>Enter a burger you want to eat, and then click the "Submit" button.</h6> --}}

                        </form>
                    </div>
                    {{/unless}}
                {{/each}}

            </ul>
        </div>

        <div class="col-sm-6">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li class="list-item">
                            <div class="burger burger-style"">
                                {{this.name}}
                            </div>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

{{!-- Create a new burger --}}
<div class="container">
    <div class="row text-center bottom">
        <div class="col-sm-12">
            <form class="create-form" action="/api/burgers" method="POST">

                <div class="form-group">
                    <label for="ca"></label>
                    <input type="text" id="ca" name="name">
                    <button class="clicker" type="submit">Add a Burger!</button>
                </div>

                <h6>Enter a burger you want to eat, and then click the "Add a Burger!" button.</h6>

            </form>
        </div>
    </div>
</div>